<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="mySQL" class="iocLooseCoupling.MySQLDataSource"/>
    <bean id="mongoDB" class="iocLooseCoupling.MongoDBDataSource"/>
    <bean id="webService" class="iocLooseCoupling.WebServiceDataSource"/>

    <bean id="userServiceWithmySQL" class="iocLooseCoupling.UserService">
        <constructor-arg ref="mySQL"/>
    </bean>

    <bean id="userServiceWithMongoDB" class="iocLooseCoupling.UserService">
        <constructor-arg ref="mongoDB"/>
    </bean>

    <bean id="userServiceWithWebService" class="iocLooseCoupling.UserService">
        <constructor-arg ref="webService"/>
    </bean>

</beans>


